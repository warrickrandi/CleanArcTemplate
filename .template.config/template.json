{
    "$schema": "http://json.schemastore.org/template", 
    "author": "Randika Hasheen", 
    "classifications": [ "CleanWebAPI", "Clean Architecture", "CleanArcTemplate" ], 
    "identity": "CleanArcTemplate", 
    "name": "Clean Architecture Template for .NET Web API", 
    "groupIdentity": "CleanArcTemplate",
    "shortName": "CleanArcTemplate",
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "sourceName": "CleanArcTemplate", 
    "preferNameDirectory": true,
    "sources": [
        {
          "source": "./",
          "target": "./",
          "exclude": [
            "**/README.md",
            "**/nuget.config",
            "**/LICENSE",
            "**/.gitattributes",
            "**/.gitignore",
            "**/*.nupkg",
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".template.config/**/*",
            ".vs/**/*",
            "**/*.filelist",
            "**/*.user",
            "**/*.lock.json",
            "**/.git/**",
            "**/.github/**",
            "*.nuspec",
            "**/node_modules/**"
          ]
        }
      ],
    "symbols": {
        "Framework" : {
            "type": "parameter",
            "description": "The target framework for the project",
            "datatype" : "choice",
            "choices": [
                {
                    "choice": "net7.0"
                },
                {
                    "choice": "net6.0"
                }
            ],
            "defaultValue": "net7.0",
            "replaces": "{TargetFramework}"
        }
    }
}